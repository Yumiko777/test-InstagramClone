<!DOCTYPE html>
<html>
  <head>
    <title>TestInstagramclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class ="header">
      <div>Instagramclone</div>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <% if logged_in? %>
        <%= link_to "投稿一覧", pictures_path %>
        <%= link_to "新規作成", new_picture_path %>
        <%= link_to "プロフィール", user_path(current_user.id) %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "サインアップ", new_user_path %>
        <%= link_to "ログイン", new_session_path %>
      <% end %>
    </header>
      <%= yield %>
    <footer class = "footer">
      <p>Copyright © 2021 DIVE INC All RIGHTS RESERVED.</p>
    </footer>
  </body>
</html>
